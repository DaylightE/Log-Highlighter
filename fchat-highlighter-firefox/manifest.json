{
  "manifest_version": 3,
  "name": "F-List Log Highlighter",
  "version": "2.4.3",
  "description": "Formats f-list log files to be more readable",
  "icons": {
    "128": "icon-128.png",
    "48": "icon-128.png",
    "32": "icon-128.png",
    "16": "icon-128.png"
  },
  "action": {
    "default_title": "F-List Log Highlighter",
    "default_icon": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "fchat-highlighter@example.com",
      "strict_min_version": "109.0",
      "update_url": "https://raw.githubusercontent.com/DaylightE/Log-Highlighter/main/fchat-highlighter-firefox/update.json"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.f-list.net/fchat/getLog.php*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
